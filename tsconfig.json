{
  "compilerOptions": {
    "target": "es2024",
    "lib": ["ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "noEmit": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"]
}
