{
  "compilerOptions": {
    "target": "es2024",
    "lib": ["ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "allowImportingTsExtensions": true,
    "declaration": true,
    "noEmit": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "graphql-helix": ["node_modules/graphql-helix/dist/index.d.ts"]
    }
  },
  "include": ["src/**/*.ts"]
}
